{
  "name": "Ease Accessibility Overlay",
  "description": "Adaptive accessibility layer for any webpage",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": ["activeTab", "scripting"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/utils/dom.js", "content/modes/seizureSafe.js", "content/modes/contrastMode.js", "content/contentScript.js"],
      "css": ["styles.css"]
    }
  ]
}