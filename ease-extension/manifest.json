{
  "name": "Ease Accessibility Overlay",
  "description": "Adaptive accessibility layer for any webpage",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/utils/dom.js",
        "content/modes/contrastMode.js",
        "content/modes/readingMode.js",
        "content/modes/focusMode.js",
        "content/modes/motorMode.js",
        "content/contentScript.js"
      ],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
